<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.wkuglen.upcomingmatches.AddEdit">


    <EditText
        android:id="@+id/match_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Match Number"
        android:inputType="number" />
    <ToggleButton
        android:id="@+id/toggle_alliance_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOn="Blue Alliance"
        android:textOff="Red Alliance"/>
    <RadioGroup
        android:id="@+id/radio_alliance"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RadioButton
            android:id="@+id/radio_alliance_red"
            android:text="@string/red_alliance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <RadioButton
            android:id="@+id/radio_alliance_blue"
            android:text="@string/blue_alliance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RadioGroup>
    <Button
        android:id="@+id/submit_match_button"
        android:text="Submit"
        android:layout_below="@id/radio_alliance"
        android:layout_alignParentRight="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="submitNewMatch"/>


</LinearLayout>
